{
  "version": "2.1.0",
  "description": "Claw Conductor configuration - always-on orchestration with triage",

  "triage": {
    "enabled": true,
    "model": "chutes/openai/gpt-oss-120b-TEE",
    "model_fallback": "mistral/devstral-2512",
    "bias": "development",
    "confidence_threshold": 0.7,
    "announce_path": true,
    "user_overrides": {
      "simple_trigger": "!simple",
      "dev_trigger": "!dev"
    }
  },

  "discord": {
    "enabled": true,
    "channel_mapping_file": "channel-workspace-map.json",
    "auto_detect": true,
    "auto_sync": true,
    "projects_dir": "/root/projects",
    "active_category": "Active Projects"
  },

  "simple_response": {
    "model": "mistral/devstral-2512",
    "model_fallback": "chutes/openai/gpt-oss-120b-TEE",
    "max_tokens": 2000,
    "temperature": 0.7,
    "project_aware": true
  },

  "development": {
    "decomposition_enabled": true,
    "parallel_execution": true,
    "max_parallel_tasks": 5,
    "auto_commit": true,
    "auto_github_push": false
  },

  "logging": {
    "level": "INFO",
    "log_file": "/var/log/claw-conductor.log",
    "announce_triage": true,
    "announce_routing": true
  },

  "github": {
    "enabled": true,
    "default_user": "jfasteroid",
    "auto_create_repo": false,
    "private_by_default": true
  }
}
